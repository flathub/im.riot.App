{
    "app-id": "im.riot.Riot",
    "base": "io.atom.electron.BaseApp",
    "base-version": "stable",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "riot",
    "rename-icon": "riot-web",
    "copy-icon": true,
    "separate-locales": false,
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=all",
        "--filesystem=xdg-download",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.secrets",
        "--filesystem=xdg-run/keyring"
    ],
    "modules": [
        {
            "name": "riot",
            "buildsystem": "simple",
            "build-commands": [
                "ar x riot-web_*.deb",
                "rm -f riot-web_*.deb",
                "tar xf data.tar.xz",
                "cp -r opt/* /app",
                "cp -r usr/share/icons/* /app/share/icons",
                "chmod -R a-s,go+rX,go-w /app/Riot",
                "install riot.sh /app/bin/riot",
                "install -Dm644 im.riot.Riot.desktop /app/share/applications/im.riot.Riot.desktop",
                "install -Dm644 im.riot.Riot.appdata.xml /app/share/appdata/im.riot.Riot.appdata.xml"
            ],
            "sources": [
                {
                    "type": "file",
                    "only-arches": ["x86_64"],
                    "url": "https://riot.im/packages/debian/pool/main/r/riot-web/riot-web_0.14.0_amd64.deb",
                    "sha256": "04748203ae1f008e48fecb609fa49172386842b851360933e37d54f7ca795bad"
                },
                {
                    "type": "script",
                    "dest-filename": "riot.sh",
                    "commands": [
                        "exec env TMPDIR=$XDG_CACHE_HOME /app/Riot/riot-web \"$@\""
                    ]
                },
                {
                    "type": "file",
                    "path": "im.riot.Riot.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "im.riot.Riot.desktop"
                },
                {
                    "type": "archive",
                    "url": "https://github.com/vector-im/riot-web/releases/download/v0.14.0/riot-v0.14.0.tar.gz",
                    "sha256": "51efd76a2badcce0bf339111c3d3ecf50c74e8bb555d0f36c653c2d746435669"
                }
            ]
        }
    ]
}
