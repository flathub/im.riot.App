{
    "app-id": "im.riot.Riot",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "19.08",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "19.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "riot",
    "rename-icon": "riot-web",
    "copy-icon": true,
    "separate-locales": false,
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=all",
        "--filesystem=xdg-download",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.portal.Fcitx",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--filesystem=xdg-run/keyring"
    ],
    "modules": [
        {
            "name": "riot",
            "buildsystem": "simple",
            "build-commands": [
                "ar x riot-web_*.deb",
                "rm -f riot-web_*.deb",
                "tar xf data.tar.xz",
                "cp -r opt/* /app",
                "mkdir -p /app/share/icons/hicolor",
                "cp -r usr/share/icons/hicolor/* /app/share/icons/hicolor",
                "chmod -R a-s,go+rX,go-w /app/Riot",
                "install riot.sh /app/bin/riot",
                "install -Dm644 im.riot.Riot.desktop /app/share/applications/im.riot.Riot.desktop",
                "install -Dm644 im.riot.Riot.appdata.xml /app/share/appdata/im.riot.Riot.appdata.xml"
            ],
            "sources": [
                {
                    "type": "file",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://packages.riot.im/debian/pool/main/r/riot-web/riot-web_1.6.0_all.deb",
                    "sha256": "c01516a16fc210497be1f056403c1c18571b812fd5b7830dc5e0e79c13cc8c46",
                    "x-checker-data": {
                        "type": "debian-repo",
                        "package-name": "riot-web",
                        "root": "https://packages.riot.im/debian",
                        "dist": "sid",
                        "component": "main"
                    },
                    "size": 2176
                },
                {
                    "type": "script",
                    "dest-filename": "riot.sh",
                    "commands": [
                        "export TMPDIR=\"$XDG_RUNTIME_DIR/app/$FLATPAK_ID\"",
                        "exec zypak-wrapper /app/Riot/riot-web \"$@\""
                    ]
                },
                {
                    "type": "file",
                    "path": "im.riot.Riot.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "im.riot.Riot.desktop"
                }
            ]
        }
    ]
}